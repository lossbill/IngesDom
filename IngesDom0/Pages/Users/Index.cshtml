@page
@model IngesDom0.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Utilisateur</h1>

<p>
    <a class="btn btn-outline-primary btn-lg " role="button" asp-page="Create">Nouveau</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Sexe)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-outline-info btn-lg" role="button" asp-route-id="@item.UserID">Modifier</a> |
                <a asp-page="./Details" class="btn btn-outline-secondary btn-lg " role="button" asp-route-id="@item.UserID">Details</a> |
                <a asp-page="./Delete" class="btn btn-outline-danger btn-lg " role="button" asp-route-id="@item.UserID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
